<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KontenDictionary">

    <EditText
        android:id="@+id/Alphabet"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="57dp"
        android:hint="Input any alphabet"
        android:paddingLeft="2dp"
        android:textSize="17dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_abc_24"
        android:background="@drawable/custom_input"
        app:helperText="A-Z"
        android:maxLength="20"/>

    <ImageView
        android:id="@+id/Handsign"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/Alphabet"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/a"/>

    <TextView
        android:id="@+id/Explain"
        android:layout_below="@id/Handsign"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place the palm facing forward, fingers together with the thumb touching the side of the palm"/>
</RelativeLayout>